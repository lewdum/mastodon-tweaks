{
  "manifest_version": 2,
  "name": "Mastodon Tweaks (tech.lgbt)",
  "description": "Accessibility tweaks and customization for Mastodon 4+.",
  "version": "0.2.0",
  "icons": {
    "64": "assets/logo-purple.svg"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://tech.lgbt/settings/preferences/appearance"
      ],
      "js": [
        "dist/settings.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://tech.lgbt/*"
      ],
      "js": [
        "dist/timeline.js"
      ],
      "run_at": "document_end"
    }
  ]
}